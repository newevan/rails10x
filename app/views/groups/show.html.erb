<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="label label-success"> 粉丝 </label>
        <%= link_to("粉转黑", quit_group_path(@group), method: :post, class: "btn btn-default") %>

      <% else %>

        <label class="label label-warning"> 您还不是该电影的粉丝 </label>
          <%= link_to("成为粉丝", join_group_path(@group), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>


      <%= link_to("添加影评", new_group_post_path(@group), class: "btn btn-default pull-right")%>

      <% if current_user && current_user == @group.user %>
    <%= link_to("编辑电影资料", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
    <table class="table">
    <thead>
       <tr>
          <th>影评内容</th>
          <th>作者</th>
        <th>发表时间</th>
       </tr>
    </thead>
     <tbody>
       <% @posts.each do |post| %>
        <tr>
            <td><%= post.content %></td>
            <td><%= post.user.email %></td>
            <td><%= post.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%= will_paginate @posts %>
    </div>

</div>
